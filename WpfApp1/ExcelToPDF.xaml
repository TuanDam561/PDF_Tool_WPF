<Window x:Class="WpfApp1.ExcelToPDF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ExcelToPDF"
        Width="900" Height="550">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Margin="0,0,0,15">
            <TextBlock Text="Chuyển Excel → PDF"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#E5322D"/>
            <TextBlock Text="Chuyển một hoặc nhiều file Excel sang PDF, có sắp xếp thứ tự"
                   FontSize="14"
                   Foreground="#666"/>
        </StackPanel>

        <!-- BODY -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <!-- LIST FILE -->
            <Border Background="White"
                CornerRadius="12"
                Padding="15"
                Margin="0,0,15,0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Danh sách Excel"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                    <ListBox x:Name="WordListBox"
                             Grid.Row="1"
                             BorderThickness="0"
                             AllowDrop="True"
                             PreviewMouseLeftButtonDown="ListBox_MouseDown"
                             Drop="ListBox_Drop">           

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8"
                                        Margin="0,0,0,6"
                                        Background="#F3F3F3"
                                        CornerRadius="6">

                                    <Grid VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Tên file -->
                                        <TextBlock Text="{Binding FileName}"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- Nút Preview -->
                                        <Button Grid.Column="1"
                                                Content="Xem trước PDF"
                                                Width="100"
                                                Height="28"
                                                Margin="20,0,0,0"
                                                ToolTip="Xem trước PDF" 
                                                Click="PreviewItem_Click"
                                               />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>
            </Border>

            <!-- ACTION -->
            <StackPanel Grid.Column="1">

                <Border Background="White"
                    CornerRadius="12"
                    Padding="15"
                    Margin="0,0,0,15">
                    <StackPanel>
                        <Button Content="➕ Thêm File Excel"
                            Height="40"
                            Margin="0,0,0,10"
                            Click="AddWord_Click"/>

                        <Button Content="❌ Xóa file chọn"
                            Height="40"
                            Click="RemoveWord_Click"/>
                    </StackPanel>
                </Border>

                <Border Background="White"
                    CornerRadius="12"
                    Padding="15">
                    <StackPanel>
                        <Button x:Name="ConvertButton"
                            Content="🔄 Chuyển sang PDF"
                            Height="45"
                            Background="#E5322D"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="Convert_Click"/>

                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
        <!-- FOOTER -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <ProgressBar x:Name="ConvertProgress"
             Height="16"
             Minimum="0"
             Maximum="100"
             Visibility="Collapsed"/>

            <TextBlock x:Name="StatusText"
           Margin="0,5,0,0"
           Foreground="#666"
           Visibility="Collapsed"/>

            <TextBlock Text="PDF Tool • Excel to PDF"
           Foreground="#888"
           HorizontalAlignment="Right"
           Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
