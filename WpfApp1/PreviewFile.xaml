<Window x:Class="WpfApp1.PreviewFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Xem trước PDF"
        Height="750"
        Width="550"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6F8">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0"
                Background="White"
                CornerRadius="8"
                Padding="10"
                Margin="0,0,0,10">
            <TextBlock x:Name="FileNameText"
                       Text="Xem trước file PDF"
                       FontSize="16"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- PREVIEW PDF -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="5">
            <wv2:WebView2 x:Name="PdfWebView"/>
        </Border>

        <!-- FOOTER -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Đóng"
                    Width="80"
                    Height="32"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
