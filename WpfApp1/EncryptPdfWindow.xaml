<Window x:Class="WpfApp1.EncryptPdfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bảo mật PDF"
        Width="900" Height="560"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6F8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Margin="0,0,0,15">
            <TextBlock Text="BẢO MẬT PDF"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#E5322D"/>
            <TextBlock Text="Mã hóa  phân quyền PDF bằng LibreOffice"
                       FontSize="14"
                       Foreground="#666"/>
        </StackPanel>

        <!-- BODY -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- FILE PANEL -->
            <Border Background="White"
                    CornerRadius="12"
                    Padding="15"
                    Margin="0,0,15,0">

                <StackPanel>
                    <TextBlock Text="Chọn file PDF"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <CheckBox x:Name="MultiFileCheckBox"
                              Content="Mã hóa nhiều file PDF"
                              Margin="0,0,0,10"/>

                    <TextBox x:Name="PdfInfoTextBox"
                             Height="32"
                             IsReadOnly="True"
                             Text="Chưa chọn file"
                             Margin="0,0,0,10"/>

                    <Button Content="📂 Chọn file PDF"
                            Height="40"
                            Click="SelectPdf_Click"/>
                </StackPanel>
            </Border>

            <!-- SECURITY PANEL -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="12"
                    Padding="15">

                <StackPanel>

                    <TextBlock Text="Tùy chọn bảo mật"
                               FontWeight="Bold"
                               FontSize="14"                            
                               Margin="0,0,0,10"/>

                    <CheckBox x:Name="PermissionOnlyCheckBox"
                              Content="Chỉ phân quyền (không mật khẩu mở file)"                            
                              Margin="0,0,0,10"
                              Checked="PermissionOnly_Checked"                             
                              Unchecked="PermissionOnly_Unchecked"/>

                    <TextBlock Text="Mật khẩu mở file"
                               FontWeight="Bold"
                               Margin="0,5,0,5"/>

                    <PasswordBox x:Name="OpenPasswordBox"
                                 Height="32"
                                 VerticalContentAlignment="Center"
                                 IsEnabled="True"/>

                    <Separator Margin="0,15,0,15"/>

                    <TextBlock Text="Quyền sử dụng"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <CheckBox x:Name="AllowPrintCheckBox"
                              Content="Cho phép in"
                              IsChecked="True"/>

                    <CheckBox x:Name="AllowCopyCheckBox"
                              Content="Cho phép sao chép nội dung"
                              IsChecked="True"/>

                    <CheckBox x:Name="AllowEditCheckBox"
                              Content="Cho phép chỉnh sửa"/>

                    <Separator Margin="0,15,0,15"/>

                    <Button Content="🔒 MÃ HÓA PDF"
                            Height="45"
                            Background="#E5322D"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="EncryptPdf_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- FOOTER -->
        <TextBlock Grid.Row="2"
                   Text="PDF Tool • Encrypt PDF"
                   Foreground="#888"
                   HorizontalAlignment="Right"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
