<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Tool" Height="500" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel>
            <TextBlock Text="PDF TOOL"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#E5322D"/>

            <TextBlock Text="Chọn công cụ bạn muốn sử dụng"
                       FontSize="14"
                       Foreground="#555"/>
        </StackPanel>

        <!-- TOOL GRID -->
        <UniformGrid Grid.Row="1"
                     Columns="3"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     Margin="0,20,0,0">

            <!-- MERGE PDF -->
            <Border Style="{StaticResource ToolCardStyle}"
                    MouseLeftButtonUp="MergePdf_Click">
                <StackPanel Margin="0,30">
                    <TextBlock Text="🔗"
                               FontSize="40"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Nối PDF"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,10,0,5"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Gộp nhiều file PDF thành một"
                               FontSize="13"
                               Foreground="#666"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- DOC TO PDF -->
            <Border Style="{StaticResource ToolCardStyle}"
                    MouseLeftButtonUp="DocToPdf_Click">
                <StackPanel Margin="0,30">
                    <TextBlock Text="📄"
                               FontSize="40"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="DOC → PDF"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,10,0,5"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Chuyển hàng loạt DOCX sang PDF"
                               FontSize="13"
                               Foreground="#666"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- SPLIT PDF (để sẵn) -->
            <Border Style="{StaticResource ToolCardStyle}" 
                    MouseLeftButtonUp="SplitPdf_Click">
                <StackPanel Margin="0,30">
                    <TextBlock Text="✂️"
                               FontSize="40"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Tách PDF"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,10,0,5"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Tách PDF theo trang"
                               FontSize="13"
                               Foreground="#666"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Encrypt PDF -->
            <Border Style="{StaticResource ToolCardStyle}"
                     MouseLeftButtonUp="EncryptPdf_Click">
                <StackPanel Margin="0,30">
                    <TextBlock Text="🔒"
                   FontSize="40"
                   HorizontalAlignment="Center"/>
                    <TextBlock Text="Mã hóa và phân quyền PDF"                               
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,10,0,5"
                   HorizontalAlignment="Center"/>
                    <TextBlock Text="Mã hóa và phân quyền PDF"
                   FontSize="13"
                   Foreground="#666"
                   TextAlignment="Center"/>
                </StackPanel>
            </Border>

        </UniformGrid>
    </Grid>
    
</Window>
