<Window x:Class="WpfApp1.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF bị khóa"
        Width="380"
        Height="220"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Thông báo -->
            <RowDefinition Height="Auto"/>
            <!-- Tên file -->
            <RowDefinition Height="Auto"/>
            <!-- Password -->
            <RowDefinition Height="*"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Thông báo -->
        <TextBlock
            Text="File PDF này được bảo vệ bằng mật khẩu."
            FontWeight="SemiBold"
            FontSize="14"
            Margin="0,0,0,6"/>

        <!-- Tên file -->
        <TextBlock
            x:Name="FileNameText"
            Grid.Row="1"
            Text="example.pdf"
            FontSize="12"
            Foreground="Gray"
            TextTrimming="CharacterEllipsis"
            Margin="0,0,0,12"/>

        <!-- Password -->
        <PasswordBox
            x:Name="PasswordBox"
            Grid.Row="2"
            Height="32"
            VerticalContentAlignment="Center"/>

        <!-- Buttons -->
        <StackPanel
            Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0,16,0,0">

            <!-- Mở PDF -->
            <Button
                Content="Mở PDF"
                Width="90"
                Height="40"
                FontWeight="Bold"
                Background="#E5322D"
                Foreground="White"
                Margin="0,0,24,0"
                Click="Ok_Click"
                IsDefault="True"/>

            <!-- Hủy -->
            <Button
                Content="Hủy"
                Width="90"
                Height="40"
                FontWeight="Bold"
                Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
