<Window x:Class="WpfApp1.MergePdfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nối PDF"
        Width="900" Height="550"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6F8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Margin="0,0,0,15">
            <TextBlock Text="Nối PDF"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#E5322D"/>
            <TextBlock Text="Gộp nhiều file PDF thành một file duy nhất"
                       FontSize="14"
                       Foreground="#666"/>
        </StackPanel>

        <!-- BODY -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <!-- DANH SÁCH FILE -->
            <Border Background="White"
                    CornerRadius="12"
                    Padding="15"
                    Margin="0,0,15,0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Danh sách file PDF"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   VerticalAlignment="Center"/>

                        <Button x:Name="PreviewButton"
                                Grid.Column="1"
                                Content="👁️ Xem trước"
                                Margin="10,0,0,0"
                                Padding="10,4"
                                Click="PreviewPdf_Click"
                                ToolTip="Cần ít nhất 2 file mới được xem trước!"
                                IsEnabled="False"/>   
                    </Grid>
                    <ListBox x:Name="PdfListBox"
                             Grid.Row="1"
                             BorderThickness="0"
                             AllowDrop="True"
                             DragOver="PdfListBox_DragOver"
                             Drop="PdfListBox_Drop">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8"
                                        Margin="0,0,0,6"
                                        Background="#F3F3F3"
                                        CornerRadius="6">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📄"
                                                   FontSize="16"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding FileName}"
                                                   VerticalAlignment="Center"
                                                   FontSize="14"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>
                </Grid>
            </Border>

            <!-- PANEL CHỨC NĂNG -->
            <StackPanel Grid.Column="1">

                <Border Background="White"
                        CornerRadius="12"
                        Padding="15"
                        Margin="0,0,0,15">

                    <StackPanel>
                        <Button Content="➕ Thêm file PDF"
                                Height="40"
                                Margin="0,0,0,10"
                                Click="AddPdf_Click"/>

                        <Button Content="❌ Xóa file đã chọn"
                                Height="40"
                                Margin="0,0,0,10"
                                Click="RemovePdf_Click"/>
                        <TextBlock Text="Sắp xếp lại PDF"                                 
                                   TextAlignment="Center"
                                   FontSize="12"
                                   FontWeight="Bold"                  
                                   />
                        <Button Content="⬆ Lên trên"
                                Height="35"
                                Margin="0,10,0,5"
                                Click="MoveUp_Click"/>

                        <Button Content="⬇ Xuống dưới"
                                Height="35"
                                Click="MoveDown_Click"/>
                    </StackPanel>
                </Border>

                <Border Background="White"
                        CornerRadius="12"
                        Padding="15">

                    <StackPanel>
                        <TextBlock Text="Xuất file"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBox Height="30"
                                 Text="merged.pdf"
                                 VerticalContentAlignment="Center"
                                 IsReadOnly="True"
                                 Margin="0,0,0,10"/>

                        <Button Content="🔗 MERGE PDF"
                                Height="45"
                                Background="#E5322D"
                                Foreground="White"
                                FontWeight="Bold"
                                Click="MergePdf_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>

        <!-- FOOTER -->
        <TextBlock Grid.Row="2"
                   Text="PDF Tool • Merge PDF"
                   Foreground="#888"
                   HorizontalAlignment="Right"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
