<Window x:Class="WpfApp1.ComparePdfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="So sánh PDF"
        Width="700"
        Height="550"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6F8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="SO SÁNH PDF"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#E53935"/>

            <TextBlock Text="Kiểm tra hai file PDF có giống nhau hay không"
                       FontSize="14"
                       Foreground="Gray"
                       Margin="0,5,0,0"/>
            <TextBlock Text=" Phần mềm chỉ có thể kiểm tra được Mã(Hash) của PDF và số trang để so sánh chứ không thế so sánh chuyên nghiệp như các phần mềm trả phí khác!"
                       FontSize="14"
                       Foreground="Red"
                       Margin="0,5,0,0"
                       TextWrapping="Wrap"
                       FontWeight="Bold"/>
        </StackPanel>

        <!-- ================= CONTENT ================= -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- PDF A -->
            <Border Background="White"
                    CornerRadius="8"
                    Padding="15"
                    Grid.Column="0"
                    BorderBrush="#DDD"
                    BorderThickness="1">

                <StackPanel>
                    <TextBlock Text="PDF A"
                               FontSize="16"
                               FontWeight="SemiBold"/>

                    <TextBlock x:Name="PdfAText"
                               Text="Chưa chọn file"
                               Foreground="Gray"
                               Margin="0,8,0,15"
                               TextWrapping="Wrap"/>

                    <Button Content="Chọn PDF A"
                            Height="36"
                            Click="SelectPdfA_Click"/>
                </StackPanel>
            </Border>

            <!-- ICON -->
            <TextBlock Text="⇄"
                       FontSize="28"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Grid.Column="1"
                       Foreground="Gray"/>

            <!-- PDF B -->
            <Border Background="White"
                    CornerRadius="8"
                    Padding="15"
                    Grid.Column="2"
                    BorderBrush="#DDD"
                    BorderThickness="1">

                <StackPanel>
                    <TextBlock Text="PDF B"
                               FontSize="16"
                               FontWeight="SemiBold"/>

                    <TextBlock x:Name="PdfBText"
                               Text="Chưa chọn file"
                               Foreground="Gray"
                               Margin="0,8,0,15"
                               TextWrapping="Wrap"/>

                    <Button Content="Chọn PDF B"
                            Height="36"
                            Click="SelectPdfB_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ================= FOOTER ================= -->
        <Border Grid.Row="2"
        Margin="0,20,0,0"
        Background="White"
        CornerRadius="8"
        Padding="15"
        BorderBrush="#DDD"
        BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- NÚT SO SÁNH -->
                <Button Grid.Row="0"
                Content="SO SÁNH"
                Height="42"
                FontSize="15"
                FontWeight="Bold"
                Background="#E53935"
                Foreground="White"
                Click="Compare_Click"/>

                <!-- KẾT QUẢ -->
                <TextBlock Grid.Row="1"
                   x:Name="ResultText"
                   Text="Kết quả sẽ hiển thị ở đây"
                   Margin="0,12,0,0"
                   FontSize="14"
                   Foreground="Gray"
                   TextAlignment="Center"/>

                <!-- FOOTER – GÓC PHẢI DƯỚI -->
                <TextBlock Grid.Row="2"
                   Text="PDF Tool • Compare PDF"
                   Foreground="#888"
                   FontSize="12"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="0,10,0,0"/>
            </Grid>
        </Border>


    </Grid>
</Window>
